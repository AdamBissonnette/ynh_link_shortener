#!/bin/bash

source /usr/share/yunohost/helpers

#=================================================
# RETRIEVE ARGUMENTS FROM THE MANIFEST
#=================================================

# Variables from install questions are automatically set:
# - admin_password
# - admin_path  
# - root_redirect
# - not_found_redirect

# Set defaults for variables not in install questions
allowed_admin_ips="*"
session_window_min="30"
user_cookie_max_days="730"
cookie_secure="1"
rate_limit_window="60"

#=================================================
# INSTALL DEPENDENCIES
#=================================================
ynh_script_progression "Installing Node.js..."

# Node.js version is automatically handled by the nodejs resource in manifest.toml

#=================================================
# DOWNLOAD, CHECK AND UNPACK SOURCE
#=================================================
ynh_script_progression "Setting up application files..."

# Download and extract source from GitHub
ynh_setup_source --dest_dir="$install_dir"

#=================================================
# INSTALL NODE.JS DEPENDENCIES AND BUILD
#=================================================
ynh_script_progression "Installing Node.js dependencies..."

pushd "$install_dir"
    # Install all dependencies (including devDependencies for TypeScript build)
    ynh_hide_warnings ynh_exec_as_app npm install
    
    # Build TypeScript to JavaScript
    ynh_script_progression "Building TypeScript application..."
    ynh_hide_warnings ynh_exec_as_app npm run build
    
    # Remove devDependencies after build to save space
    ynh_hide_warnings ynh_exec_as_app npm prune --production
popd

#=================================================
# ADD A CONFIGURATION
#=================================================
ynh_script_progression "Adding $app's configuration files..."

# Create data directory for SQLite database
mkdir -p "$install_dir/data"

# Create .env file with YunoHost configuration
cat > "$install_dir/.env" <<EOF
# Server Configuration
PORT=$port

# Admin Authentication
ADMIN_PASSWORD=$admin_password

# Comma-separated list of IPs allowed to access admin endpoints
# YunoHost reverse proxy will pass the real IP via X-Forwarded-For
ALLOWED_ADMIN_IPS=$allowed_admin_ips

# Admin UI path
ADMIN_PATH=$admin_path

# Root redirect target
ROOT_REDIRECT=$root_redirect

# Unknown paths redirect here
NOT_FOUND_REDIRECT=$not_found_redirect

# Session window (minutes)
SESSION_WINDOW_MIN=$session_window_min

# User cookie lifetime (days)
USER_COOKIE_MAX_DAYS=$user_cookie_max_days

# Secure cookies (HTTPS)
COOKIE_SECURE=true

# Rate limit window (seconds)
RATE_LIMIT_WINDOW=$rate_limit_window
EOF

chmod -R o-rwx "$install_dir"
chown -R "$app:www-data" "$install_dir"

#=================================================
# STORE SETTINGS FOR CONFIG PANEL
#=================================================
ynh_app_setting_set --app="$app" --key=admin_password --value="$admin_password"
ynh_app_setting_set --app="$app" --key=allowed_admin_ips --value="*"
ynh_app_setting_set --app="$app" --key=admin_path --value="$admin_path"
ynh_app_setting_set --app="$app" --key=root_redirect --value="$root_redirect"
ynh_app_setting_set --app="$app" --key=not_found_redirect --value="$not_found_redirect"
ynh_app_setting_set --app="$app" --key=session_window_min --value="30"
ynh_app_setting_set --app="$app" --key=user_cookie_max_days --value="730"
ynh_app_setting_set --app="$app" --key=cookie_secure --value="1"
ynh_app_setting_set --app="$app" --key=rate_limit_window --value="60"

#=================================================
# SYSTEM CONFIGURATION
#=================================================
ynh_script_progression "Adding system configurations related to $app..."

# Add nginx configuration
ynh_config_add_nginx

# Add systemd service
ynh_config_add_systemd

# Register the service in YunoHost
yunohost service add "$app" --description="Node.js application"

#=================================================
# START SYSTEMD SERVICE
#=================================================
ynh_script_progression "Starting $app's systemd service..."

ynh_systemctl --service="$app" --action="start"

#=================================================
# END OF SCRIPT
#=================================================

ynh_script_progression "Installation of $app completed"
