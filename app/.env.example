# Server Configuration
PORT=3000

# Admin Authentication
# IMPORTANT: Change this password in production!
ADMIN_PASSWORD=changeme

# Comma-separated list of IPs allowed to access admin endpoints
# Use * to allow all IPs (NOT recommended for production)
ALLOWED_ADMIN_IPS=127.0.0.1,::1

# Admin UI path (serve admin interface here)
ADMIN_PATH=/derp

# Root redirect target (where '/' sends users)
ROOT_REDIRECT=https://example.com

# Unknown paths (HTML clients) redirect here
NOT_FOUND_REDIRECT=https://example.com

# Session window (minutes) for ls_sess cookie
SESSION_WINDOW_MIN=30
# Lifetime (days) for long-lived user cookie
USER_COOKIE_MAX_DAYS=730

# Set cookie as Secure (HTTPS only); set to true in production
COOKIE_SECURE=false

# Rate limit window (seconds) - one hit per IP per slug per window
# Set to 0 to disable rate limiting (allow all hits)
RATE_LIMIT_WINDOW=60
